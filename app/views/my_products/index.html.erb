<html>
  <body>
	    
      <div class="container-fluid text-center" id="page-content">
      	<div class="row content">
          
          <div class="row search-orders">
		<div class="col-md-12">
		<div class="form-group">
		    <%= form_tag(root_path, method: :get) do %>
		    <%= text_field_tag "searchprd", params[:searchprd], class: "form-control", placeholder: "Seach for Products", style: "width: 390px;" %>
		    <button type="submit" class="btn btn-default filter-btn" style="margin-left: 10px;  margin-right: 10px; width: 70px">Filter</button>
		    <input type="text" data-provide='datepicker' id="dateFrom"> - <input type="text" data-provide='datepicker' id="dateTo">
		    <div class="btn-group date-range" style="margin-left: 10px; margin-right: 10px;">
		      <a href="#" class="btn btn-default flex-right" id="date-range">Select Date Range</a>
		      <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></a>
		      <ul class="dropdown-menu">
			<li>Today</li>
			<li>Yesterday</li>
			<li>Last 7 days</li>
			<li>Last 30 days</li>
			<li>Last 90 days</li>
			<li>Week to date</li>
			<li>Month to date</li>
			<li>Quarter to date</li>
			<li>Year to date</li>
		      </ul>
		    </div>            
		  <% end %>
		</div>
		</div>
	  </div>
          
          <div class="col-md-12 text-left">
            <div><p id="notice"><%= notice %></p></div><br/>
            	<% @myproducts.in_groups_of(2, false).each do |group| %>
		      <div class="row">
			  <% group.each do |product| %>
			    <div class="col-md-6">
				    
			      <div class="panel-heading" style="width: 455px;">
				  <%= link_to "", target: "_top", class: "btn btn-default", id: "shopify-link" do %>
				    <span class="glyphicon glyphicon-new-window" style="margin-right: 10px;"></span>Open in Shopify
				  <% end %>
				  <div class="btn-group date-range" style="margin-left: 10px;">
				    <a href="#" class="btn btn-default flex-right" id="date-range">Action</a>
				    <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></a>
				    <ul class="dropdown-menu">
				      <li>Delete From Shopify</li>
				      <li>Stop Tracking</li>
				      <li>Override this Product</li>
				      <li>Prevent price from auto-updating</li>
				    </ul>
				  </div>
			      </div><!-- end of panel header -->
				    
			      <div class="panel-body" style="width: 455px;">
				<div class="row">
				  <div class="col-md-5">
					  <div class="prd-image"><img src="http://placehold.it/124x124"></div>
				  </div>
				  <div class="col-md-6">
				    <a><%= product.title %></a>
				  </div>
				</div>
			      </div><!-- end of panel body -->
			    </div><!-- end of col -->
		  <% end %>
              </div><!-- end of row -->
	    <br/>
	    <br/>
            <% end %>
            
            
          </div><!-- end of page content -->
          
        </div><!--end of row content-->
      </div><!-- end of container fluid-->
      
  </body>
</html>
