<html>
  <body>
	    
      <div class="container-fluid text-center" id="page-content">
      	<div class="row content">
          
          <div class="row search-orders">
		<div class="col-md-12">
		<div class="form-group">
		    <%= form_tag(root_path, method: :get) do %>
		    <%= text_field_tag "searchprd", params[:searchprd], class: "form-control", placeholder: "Seach for Products", id: 'search-prd' %>
		    <div class="btn-group date-range" style="margin-left: 10px; margin-right: 10px;">
		      <a href="#" class="btn btn-default flex-right" id="filter-option-btn">All</a>
		      <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></a>
		      <ul class="dropdown-menu" id="filter-option">
			<li>Automatic Price Updates On</li>
			<li>Price Updates Off</li>
		      </ul>
		    </div>         
		  <button type="submit" class="btn btn-default filter-btn" id="filter-btn" style="margin-left: 10px;  margin-right: 10px;">Filter</button>   
		  <% end %>
		</div>
		</div>
	  </div>
          
          <div class="col-md-12 text-left">
            <div><p id="notice"><%= notice %></p></div><br/>
            	<% @myproducts.in_groups_of(2, false).each do |group| %>
		      <div class="row">
			  <% group.each do |product| %>
			    <div class="col-md-6">
				    
			      <div class="panel-heading" style="width: 455px;">
				  <%= button_to "https://2d69dfd97a185d97d49cb4b85de5e76f:1cd78cc392fe8861b891a3f881b3c5d8@gels-store.myshopify.com/admin/products/#{product.id}", method: "get", target: "_blank", class: "btn btn-default", id: "shopify-link" do %>
				    <span class="glyphicon glyphicon-new-window" style="margin-right: 10px;"></span>Open in Shopify
				  <% end %>
				  <div class="btn-group date-range" style="margin-left: 10px;">
				    <a href="#" class="btn btn-default flex-right" id="date-range">Action</a>
				    <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></a>
				    <ul class="dropdown-menu">
				      <li>Delete From Shopify</li>
				      <li>Stop Tracking</li>
				      <li>Override this Product</li>
				      <li>Prevent price from auto-updating</li>
				    </ul>
				  </div>
			      </div><!-- end of panel header -->
				    
			      <div class="panel-body" style="width: 455px;">
				<div class="row">
				  <div class="col-md-5">
					  <div class="prd-image"><img src="http://placehold.it/124x124"></div>
				  </div>
				  <div class="col-md-6">
				    <a><%= product.title %></a>
				  </div>
				</div>
			      </div><!-- end of panel body -->
			    </div><!-- end of col -->
		  <% end %>
              </div><!-- end of row -->
	    <br/>
	    <br/>
            <% end %>
            
            
          </div><!-- end of page content -->
          
        </div><!--end of row content-->
      </div><!-- end of container fluid-->
      
  </body>
</html>
