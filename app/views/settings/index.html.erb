			.sidebar-nav-2 {
				width: 250px;
			}
			.sidebar-nav-2 .navbar .navbar-collapse {
				padding: 0;
				max-height: none;
			}
			.sidebar-nav-2 .navbar ul {
				float: none;
				display: block;
			}
			.sidebar-nav-2 .navbar li {
				float: none;
				display: block;
			}
			.sidebar-nav-2 .navbar li a {
				padding-top: 12px;
				padding-bottom: 12px;
			}
		}
		.product-cost-lbl {
			margin-left: 25px;
		}
		.plus{
			margin-left: 25px;
			margin-right: 25px;
		}
		.markup-lbl, .price-tag {
			margin-left: 25px;
		}
		.Container, .price-tag, .product-cost-lbl,
		.group, .plus, .cap-toggle, .markup-lbl, .select-opt,
		.markup-type, .markup-type-2, #prd-markup-lbl, .col-md-1,
		.col-md-7, .compare-at-price-mu {
			display: inline-block;
		}
		.input-group-btn select {
			border-color: #ccc;
			margin-top: 0px;
		    margin-bottom: 0px;
