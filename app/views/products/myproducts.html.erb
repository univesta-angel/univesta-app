<html>

  <body>
    <div class="container main-content">

      <div class="container-fluid">
        <div class="col-md-12">
          <div class="panel">
            <div class="panel-body align-center">
              <div class="row">
                <div class="col-lg-7">
                  <div class="input-group">
                    <%= form_tag(products_path, method: :get) do %>
                      <div class="col-xs-8">
                        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Enter Keywords" %></div>
                      <div class="col-xs-2 align-right">
                        <%= submit_tag "Filter", name: nil, class: "btn btn-secondary" %></div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


      <h2>Pushed Product</h2>

    </div>

  </body>

</html>