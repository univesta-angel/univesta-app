<html>
<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({
        title: "Home",
        icon: "<%= asset_path('favicon.ico') %>"
      });
    });
  </script>
<% end %>

<p id="notice"><%= notice %></p>
  
<head>
  <style type="text/css">
    .input-group.input-group-sm, .input-group-addon{
      margin-top: 15px;
    }
    .container{
      margin-top: 20px;
      margin-bottom: 20px;
    }
  </style>
</head>

<body>

<h1>Import List</h1>

<table>

  <tbody>
    <% @products.each do |product| %>
      <div class="container">

        <div class="col-md-12">
        <div class="panel with-nav-tabs panel-default">

        <div class="panel-heading">
          <div class="row">
            <div class="col-lg-8 col-sm-7">

              <ul class="nav nav-tabs">
                <li class="active"><a href="#item" data-toggle="tab">Products</a></li>
                <li><a href="#variants" data-toggle="tab">Variants</a></li>
                <li><a href="#" data-toggle="tab">Images</a></li>
              </ul>
            </div>
            <div class="col-lg-4 col-sm-5 align-right">
              <div class="container-flex flex-right"><%= button_to "Push to Store", push_path(:_title => product.title, :_body => product.body_html, :_type => product.product_type, :_vendor => product.vendor, :_img => product.images, :_price => product.price), {class: 'btn btn-default margin-right'} %>
              </div>
            </div>
          </div>
        </div>

          <div class="panel-body">
          <div class="tab-content">

          <div class="tab-pane fade in active" id="item">
          <div class="media" id="item">
            <div class="media-left">
              <%= image_tag(product.images, :alt => "picture") %>
            </div>
            <div class="media-body">
              <div>
                <b><%= product.title %></b>
              </div>
              <div class="input-group">
                <span class="input-group-addon">Change Name:</span>
                <input type="text" class="form-control" aria-describedby="basic-addon1" maxlength="255" value="<%= product.title %>">
              </div>
              <div class="input-group input-group-sm">
                <span class="input-group-addon" id="sizing-addon3">Collections:</span>
                <%= text_field_tag :_collections, "", class: 'form-control', placeholder: "Choose Collections" %>
              </div>

              <div class="row">
                <div class="col-lg-6">
                  <div class="input-group input-group-sm">
                    <span class="input-group-addon" id="sizing-addon3">Type:</span>
                    <%= text_field_tag :_type, "", class: 'form-control', placeholder: "Choose Type" %>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="input-group input-group-sm">
                    <span class="input-group-addon" id="sizing-addon3">Tags:</span>
                    <%= text_field_tag :_tags, "", class: 'form-control', placeholder: "Insert Tags Here" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          </div>

          <div class="tab-pane fade" id="variants">
            <table class="table table-condensed table-bordered table-striped volumes">
              <thead>
                <tr>
                  <th></th>
                  <th>SKU</th>
                  <th>Color</th>
                  <th>Size</th>
                  <th>Cost</th>
                  <th>Price</th>
                  <th>Compared At Price</th>
                  <th>Inventory</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= image_tag(product.images, :alt => "img") %></td>
                </tr>
              </tbody>
            </table>
          </div>

          </div>
          </div>

        </div>
        </div>

      </div>
    </td>
    </tr>
    <% end %>
  </tbody>
</table>

</body>

</html>