<html>
<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({
        title: "Home",
        icon: "<%= asset_path('favicon.ico') %>"
      });
    });

  </script>

<% end %>

<p id="notice"><%= notice %></p>

<body>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Body html</th>
      <th>Images</th>
      <th>Product type</th>
      <th>Tags</th>
      <th>Vendor</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
    <td>
     <div class="container">
     <div class="input-group">

      <div class="media">
        <div class="media-left">
          <%= image_tag(product.images, :alt => "picture") %>
        </div>
        <div class="media-body">
          <%= text_field_tag :_title, product.title, {class: 'input-xxlarge'} %>
        </div>
      </div>

    </div>
    </div>
    </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>


</body>

</html>