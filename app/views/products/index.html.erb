<% @products.each do |product| %>
      <%= form_tag(push_path, method: 'post', remote: true) do %>
      <%= hidden_field_tag :_colors, product.colors %>
      <%= hidden_field_tag :_sizes, product.sizes %>
      <%= hidden_field_tag :_prices, product.price %>
      <%= hidden_field_tag :_body, product.body_html %>
      <%= hidden_field_tag :_compare_at_price, product.compare_at_price %>
      <%= hidden_field_tag :_avail_qty, product.avail_qty %>
      <%= hidden_field_tag :_variant_images, product.variant_images %>

<!--nav-->

<img style="height: 360px; width: 1000px; margin-left: 130px; margin-top: 20px;" src="https://s23.postimg.org/70ol5adm3/lols.png">   
<ul class="nav nav-pills" style="margin-top: -20px; margin-left: 120px;">
  <li slot="select" ><span class="for-checkbox"><%= check_box_tag "product_ids[]", product.id %></span></li>
  <li class="active"><a href="#products<%= @ctr %>" data-toggle="tab" aria-expanded="true" style="margin-top: -319px; margin-left: 60px; font-family: Impact, Charcoal, sans-serif;">Product</a></li>
  <li class=""><a href="#description<%= @ctr %>" data-toggle="tab" aria-expanded="false" style="margin-top: -319px; margin-left: 140px; font-family: Impact, Charcoal, sans-serif;">Description</a></li>
   <li class=""><a href="#variants<%= @ctr %>" data-toggle="tab" aria-expanded="false" style="margin-top: -319px; margin-left: 245px; font-family: Impact, Charcoal, sans-serif;">Variants</a></li>
    <li class=""><a href="#images<%= @ctr %>" data-toggle="tab" aria-expanded="false" style="margin-top: -319px; margin-left: 332px; font-family: Impact, Charcoal, sans-serif;">Images</a></li>
</ul>

  <div class="panel-body" style=" margin-top: -300px; width: 800px; margin-left: 200px; color: #000;">
<div id="myTabContent" class="tab-content">

  <!--PRODUCTS TAB-->
  <div class="tab-pane fade active in" id="products<%= @ctr %>">
    <div class="media" id="item">
      <div class="media-left">
        <%= image_tag(product.images.first, :size => "230x230", :alt => "picture") %><%= hidden_field_tag :_img, product.images %>
      </div>
      <div class="media-body">
        <div class="product-title">
          <b><%= product.title %></b>
        </div>
          <div class="input-group">
            <span class="input-group-addon">Change Name:</span>
            <%= text_field_tag :_title, product.title, maxlength: 255, class: 'form-control' %>
          </div>
          <div class="input-group input-group-sm">
            <span class="input-group-addon" id="sizing-addon3">Collections:</span>
            <%= text_field_tag :_collections, "", class: 'form-control', placeholder: "Choose Collections", list: "browsers" %>
            <datalist id="browsers">
              <option value="Sample A">
              <option value="Sample B">
              <option value="Sample C">
            </datalist>
          </div>

          <div class="row">
            <div class="col-lg-6">
              <div class="input-group input-group-sm">
                <span class="input-group-addon" id="sizing-addon3">Type:</span>
                <%= text_field_tag :_type, "", class: 'form-control', placeholder: "Choose Type" %>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="input-group input-group-sm">
                <span class="input-group-addon" id="sizing-addon3">Tags:</span>
                <%= text_field_tag :_tags, "", class: 'form-control', placeholder: "Insert Tags Here" %>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
  <!--END OF PRODUCTS TAB-->

  <!--DESCRIPTION TAB-->
  <div class="tab-pane fade" id="description<%= @ctr %>">
    <p><%= product.body_html %><br><br>
    <%= product.images %><br><br>
    <%= product.colors %><br><br>
    <%= product.sizes %><br><br>
    <%= product.price %>----<%= product.price.size %><br><%= label_tag product.avail_qty %>-----------<%= label_tag product.avail_qty.size %></p>
  </div>
  <!--END OF DESCRIPTION TAB-->

  <!--VARIANTS TAB-->
  <div class="tab-pane fade" id="variants<%= @ctr %>">
    <table class="table table-condensed table-bordered table-striped volumes">
      <thead>
        <tr>
          <th>Image</th>
          <th>SKU</th>
          <th>Color</th>
          <th>Size</th>
          <th>Cost</th>
          <th>Price</th>
          <th>Compared At Price</th>
          <th>Inventory</th>
        </tr>
      </thead>
        <tbody>
          <tr>
            <td><div class = "v-img"><%= image_tag(product.images.first, :alt => "img", :size => "100x100") %></div></td>
            <td><%= text_field_tag :_sku, "", class: 'form-control', size: 10 %></td>
            <td><%= text_field_tag :_color, "", class: 'form-control', size: 10 %></td>
            <td><%= text_field_tag :_size, "", class: 'form-control', size: 10 %></td>
            <td></td>
            <td><%= text_field_tag :_prc, "", class: 'form-control', size: 10 %></td>
            <td><%= text_field_tag :_compAtPrice, "", class: 'form-control', size: 10 %></td>
            <td><%= label_tag product.avail_qty %></td>
          </tr>
        </tbody>
      </table>
  </div>
  <!--END OF VARIANTS TAB-->

  <!--IMAGES TAB-->
  <div class="tab-pane fade" id="images<%= @ctr %>">
    <div>
      <div class="row space-bottom">
        <div class="image-select">
          <div class="product-img">
            <div class="product-img-action">
                <%= image_tag(product.images.first, :alt => "img") %>
              <div class="icon-selected-box align-center">
                <svg class="icon-selected">
                  <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-selected"></use>
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--END OF IMAGES TAB-->


    <!--PUSH BUTTON-->
    <div class="panel-footer">
      <div class = "row">
        <div class = "col-lg-12">
          <div class="text-right">
            <%= link_to "Remove Product", product, method: :delete, data: { confirm: 'Are you sure?' } %>
            <%= submit_tag 'Push to Store', class: "btn btn-success " %>
          </div>
        </div>
      </div>
    </div>


  </div>
</div>
<br/>
<br/>


