    <script type="text/javascript">
      $(document).ready(function(){
        // --- for each product ---
        $("#select_all").change(function(){  //"select all" change 
          $(".checkbox").prop('checked', $(this).prop("checked")); //change all ".checkbox" checked status
        });
        //".checkbox" change 
        $('.checkbox').change(function(){ 
            //uncheck "select all", if one of the listed checkbox item is unchecked
            if(false == $(this).prop("checked")){ //if this item is unchecked
                $("#select_all").prop('checked', false); //change "select all" checked status to false
            }
            //check "select all" if all checkbox items are checked
            if ($('.checkbox:checked').length == $('.checkbox').length ){
                $("#select_all").prop('checked', true);
            }
        });
        // -- for each product variant ---
        $("#select_all2").change(function(){  //"select all" change 
          $(".checkbox2").prop('checked', $(this).prop("checked")); //change all ".checkbox" checked status
        });
        //".checkbox" change 
        $('.checkbox2').change(function(){ 
            //uncheck "select all", if one of the listed checkbox item is unchecked
            if(false == $(this).prop("checked")){ //if this item is unchecked
                $("#select_all2").prop('checked', false); //change "select all" checked status to false
            }
            //check "select all" if all checkbox items are checked
            if ($('.checkbox2:checked').length == $('.checkbox2').length ){
                $("#select_all2").prop('checked', true);
            }
        });
        
        // --- hide / unhide dropwdown option ---
        $('#bulkaction').hide();
        $('#select_all').change(function () {
          if ($('#select_all').prop("checked") == true) {
              $('#bulkaction').show();
          } else {
              $('#bulkaction').hide();
          }
        }); //---end
        
        var btn_op1 = $('#dropdownMenu1')
        var btn_op2 = $('#dropdownMenu2')
        var price_op1 = $('ul#list1.dropdown-menu li a#op1a')
        var price_op2 = $('ul#list1.dropdown-menu li a#op1b')
        var cap_op1 = $('ul#list2.dropdown-menu li a#op2a')
        var cap_op2 = $('ul#list2.dropdown-menu li a#op2b')

        $('.price-edit').on('click',function(){
          switch ($(this).attr('id')){
            // price - set new value
            case 'op1a':
              btn_op2.removeClass('active')
              $('.price-edit').removeClass('active')

              btn_op1.toggleClass('active')
              price_op1.toggleClass('active')
              break;

            // price - multiply by
            case 'op1b':
              btn_op2.removeClass('active')
              $('.price-edit').removeClass('active')

              btn_op1.toggleClass('active')
              price_op2.toggleClass('active')
              break;

            // compare at price - set new value
            case 'op2a':
              btn_op1.removeClass('active')
              $('.price-edit').removeClass('active')

              btn_op2.toggleClass('active')
              cap_op1.toggleClass('active')
              break;

            // compare at price - multiply by
            case 'op2b':
              btn_op1.removeClass('active')
              $('.price-edit').removeClass('active')

              btn_op2.toggleClass('active')
              cap_op2.toggleClass('active')
              break;

            default:
              btn_op1.removeClass('active')
              btn_op2.removeClass('active')
          }
        });

        $('.btn.btn-sm.flex-right').on('click', function(e){
          e.preventDefault();
          switch ($(this).attr('id')){
            case 'apply':
              e.preventDefault();
              var nv = $('#new_val').val();
              var productid = $('#foredit').val();
              var urlpath ='';
              if (price_op1.hasClass('active')){
                urlpath = '/edit_price';
              }
              else if(cap_op1.hasClass('active')) {
                urlpath = '/edit_cap';
              }
              sendParams(nv, productid, urlpath);
              $('#myModal').modal('toggle');
              break;

            case 'apply2':
              e.preventDefault();
              var nv2 = $('#multiplier').val();
              var productid2 = $('#foredit2').val();
              var urlpath2 ='';
              if (price_op2.hasClass('active')){
                urlpath2 = '/multiply_price';
              }
              else if(cap_op2.hasClass('active')){
                urlpath2 = '/multiply_cap';
              }
              
              sendParams(nv2, productid2, urlpath2);
              $('#myModal2').modal('toggle');
              break;
          }
        })

        //----- keep active tab on display
        $('a[data-toggle="tab"]').on('show.bs.tab', function(e) {
            localStorage.setItem('activeTab', $(e.target).attr('href'));
        });
        var activeTab = localStorage.getItem('activeTab');
        if(activeTab){
            $('#myTab a[href="' + activeTab + '"]').tab('show');
        } // ---- end
        
        $("select").imagepicker({
          hide_select : true,
          show_label  : false
        })

      });

      function sendParams(nv, productid, urlpath){
        $.ajax({
          url: urlpath,
          type: 'post',
          data: {
            new_val: nv,
            productid: productid
          },
          dataType: 'application/json',
          success: function(data){
            window.location.reload();
          }
        });
      }
    </script>

