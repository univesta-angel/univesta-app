<html>
<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({
        title: "Home",
        icon: "<%= asset_path('favicon.ico') %>"
      });
    });

  </script>

<% end %>

<head>
  <style type="text/css">
    .input-group.input-group-sm, .input-group-addon{
      margin-top: 15px;
    }
    .container{
      margin-top: 20px;
      margin-bottom: 20px;
    }
    .product-title{
      margin-bottom: 20px;
    }
  </style>
  <script type="text/javascript">
    $('#tab2default').click(function (e) {
      e.preventDefault()
      $(this).tab('<%= j (render 'variant_view') %>')
    })
  </script>
  </head>
</head>

<p id="notice"><%= notice %></p>

<body>

<div>
  <h2>Import List</h2>
</div>

<table>
  <tbody>
    <% @products.each do |product| %>
      <tr><td>
        <div class="col-md-9">
          <div class="panel with-nav-tabs panel-default">
            <div class="panel-heading">
              <div class="row">
              <div class="col-lg-6 col-sm-6">
                <ul class="nav nav-tabs">
                  <li role="presentation" class="active"><a href="#tab1default" data-toggle="tab">Product</a></li>
                  <li role="presentation"><a href="#tab2default" data-toggle="tab">Variants</a></li>
                  <li role="presentation"><a href="#tab3default" data-toggle="tab">Images</a></li>
                </ul>
              </div>
              <div class="col-lg-2 col-sm-3 align-right">
                <div class="container-flex flex-right">
                  <div class="margin-small-right">
                    <%= button_to "Remove Product", product, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </div>
                  <%= button_to "Push to Store", push_path(:_title => params[:prodt], :_body => product.body_html, :_type => product.product_type, :_vendor => product.vendor, :_img => product.images, :_price => product.price), {class: 'btn btn-default margin-right'} %>
                </div>
              </div>
            </div>
          </div>

            <div class="panel-body">
                <div class="tab-content">

                    <!--PRODUCTS TAB-->
                    <div class="tab-pane fade in active" id="tab1default">
                      <div class="media" id="item">
                        <div class="media-left">
                          <%= image_tag(product.images, :alt => "picture") %>
                        </div>
                        <div class="media-body">
                          <div class="product-title">
                            <b><%= product.title %></b>
                          </div>
                            <div class="input-group">
                              <span class="input-group-addon">Change Name:</span>
                              <%= text_field_tag :prodt, product.title, maxlength: 255, class: 'form-control' %>
                            </div>
                            <div class="input-group input-group-sm">
                              <span class="input-group-addon" id="sizing-addon3">Collections:</span>
                              <%= text_field_tag :_collections, "", class: 'form-control', placeholder: "Choose Collections" %>
                            </div>

                            <div class="row">
                              <div class="col-lg-6">
                                <div class="input-group input-group-sm">
                                  <span class="input-group-addon" id="sizing-addon3">Type:</span>
                                  <%= text_field_tag :_type, "", class: 'form-control', placeholder: "Choose Type" %>
                                </div>
                              </div>
                              <div class="col-lg-6">
                                <div class="input-group input-group-sm">
                                  <span class="input-group-addon" id="sizing-addon3">Tags:</span>
                                  <%= text_field_tag :_tags, "", class: 'form-control', placeholder: "Insert Tags Here" %>
                                </div>
                              </div>
                          </div>

                        </div>
                      </div>
                    </div>

                    <!--VARIANTS TAB-->
                    <div class="tab-pane fade" id="tab2default">
                      <%= render partial: "variant_view" %>
                    </div>

                    <!--IMAGES TAB-->
                    <div class="tab-pane fade" id="tab3default">Default 3</div>
                </div>
              </div>
            </div>
          </div>
        </td></tr>
      <% end %>
    </tbody>
  </table>

</body>

</html>