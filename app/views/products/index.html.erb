<html>
<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({
        title: "Home",
        icon: "<%= asset_path('favicon.ico') %>"
      });
    });

  </script>

<% end %>

<p id="notice"><%= notice %></p>

<body>

<h1>Products</h1>

<table>

  <tbody>
    <% @products.each do |product| %>
    <tr>
    <td>
      <div class="container">

        <div class="media">
          <div class="media-left">
            <%= image_tag(product.images, :alt => "picture") %>
          </div>

          <div class="media-body">
              <button type="button" class="btn btn-primary btn-lg pull-right">Push to Store</button><br>
            <%= product.title %>  
            <div class="input-group">
              <span class="input-group-addon">Change Name:</span>
              <input type="text" class="form-control" placeholder="Username" aria-describedby="basic-addon1">
            </div>
            <div class="input-group input-group-sm">
              <span class="input-group-addon" id="sizing-addon3">Collections:</span>
              <input type="text" class="form-control" placeholder="Choose Collections" aria-describedby="sizing-addon3">
            </div>

            <div class="row">
            <div class="col-lg-6">
              <div class="input-group input-group-sm">
                <span class="input-group-addon" id="sizing-addon3">Type:</span>
                <input type="text" class="form-control" placeholder="Choose Type" aria-describedby="sizing-addon3">
              </div>
            </div>
            <div class="col-lg-6">
              <div class="input-group input-group-sm">
                <span class="input-group-addon" id="sizing-addon3">Tags:</span>
                <input type="text" class="form-control" placeholder="Insert Tags" aria-describedby="sizing-addon3">
              </div>
            </div>
            </div>

        </div>
      </div>
    </div>
    </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>


</body>

</html>